<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="30dp"
    tools:context=".Barang.MainActivity"
    android:background="@drawable/background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:id="@+id/judul"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="casual"
            android:text="Entry Data Obat\nDengan FireBase"
            android:textAlignment="center"
            android:textColor="#FF9800"
            android:textSize="25sp" />
        <LinearLayout
            android:layout_below="@+id/judul"
            android:id="@+id/layout1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                        <EditText
                            android:id="@+id/kode"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_marginBottom="20dp"
                            android:background="@drawable/border"
                            android:ems="10"
                            android:fontFamily="sans-serif-condensed-light"
                            android:hint="Masukkan Kode Obat"
                            android:inputType="textPersonName"
                            android:textAlignment="center"
                            android:textColorHint="#000"/>

                        <EditText
                            android:id="@+id/nama"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_marginBottom="20dp"
                            android:background="@drawable/border"
                            android:ems="10"
                            android:textColorHint="#000"
                            android:fontFamily="sans-serif-condensed-light"
                            android:hint="Masukan Nama Obat"
                            android:inputType="textPersonName"
                            android:textAlignment="center" />
                        <EditText
                            android:id="@+id/satuan"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_marginBottom="20dp"
                            android:background="@drawable/border"
                            android:ems="10"
                            android:textColorHint="#000"
                            android:fontFamily="sans-serif-condensed-light"
                            android:hint="Masukkan Satuan Obat"
                            android:inputType="textPersonName"
                            android:textAlignment="center" />

                    <EditText
                        android:id="@+id/expDate"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginBottom="20dp"
                        android:background="@drawable/border"
                        android:ems="10"
                        android:textColorHint="#000"
                        android:fontFamily="sans-serif-condensed-light"
                        android:hint="Masukkan Kadaluwarsa Obat"
                        android:inputType="textPersonName"
                        android:textAlignment="center" />
                    <EditText
                        android:id="@+id/harga"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginBottom="20dp"
                        android:background="@drawable/border"
                        android:ems="10"
                        android:textColorHint="#000"
                        android:fontFamily="sans-serif-condensed-light"
                        android:hint="Masukkan Harga Obat"
                        android:inputType="textPersonName"
                        android:textAlignment="center" />

                    <EditText
                        android:id="@+id/jumlah"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginBottom="20dp"
                        android:background="@drawable/border"
                        android:ems="10"
                        android:textColorHint="#000"
                        android:fontFamily="sans-serif-condensed-light"
                        android:hint="Masukkan Jumlah Obat"
                        android:inputType="textPersonName"
                        android:textAlignment="center" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">
                <Button
                    android:id="@+id/save"
                    android:layout_width="210dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/border2"
                    android:fontFamily="sans-serif-condensed-medium"
                    android:text="add"
                    android:textColor="#FF9800"
                    android:textSize="20sp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</ScrollView>